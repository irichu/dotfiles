{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "modules": [
    "break",
    /*
     * OS
     */
    {
      "type": "os",
      "key": "OS   ",
      "keyColor": "green"
    },
    {
      "type": "kernel",
      "key": " ├  ",
      "keyColor": "green"
    },
    {
      "type": "packages",
      "key": " ├ 󰏖 ",
      "keyColor": "green"
    },
    {
      "type": "shell",
      "key": " └  ",
      "keyColor": "green"
    },
    "break",
    /*
     * Device
     */
    {
      "type": "host",
      "format": "{2}",
      "key": "Device",
      "keyColor": "yellow"
    },
    {
      "type": "cpu",
      "format": "{1} ({3}) @ {7} GHz",
      "key": " ├  ",
      "keyColor": "yellow"
    },
    {
      "type": "gpu",
      "format": "{1} {2} @ {12} GHz",
      "key": " ├ 󰢮 ",
      "keyColor": "yellow"
    },
    {
      "type": "memory",
      "key": " ├  ",
      "keyColor": "yellow"
    },
    {
      "type": "swap",
      "key": " ├ 󰓡 ",
      "keyColor": "yellow"
    },
    {
      "type": "disk",
      "key": " └  ", // 󰋊
      "keyColor": "yellow",
      "showReadOnly": false,
      "showExternal": true,
      "showSubvolumes": false
    },
    "break",
    "colors"
  ],
  "display": {
    "separator": " ➜  ", // Separator between keys and values
    "key": {
      "type": "string" // string, icon, both, or none
    },
    "bar": {
      "width": 10, // Width of percentage bars
      "charElapsed": "■", // Character for elapsed portion
      "charTotal": "-" // Character for total portion
    },
    "percent": {
      "type": 9 // 1=number, 2=bar, 3=both, 9=colored number
    }
  }
}
